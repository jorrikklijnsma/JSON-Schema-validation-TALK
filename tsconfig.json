{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node", // important
    "typeRoots": ["./node_modules/@types"], // This ensures TypeScript sees node types
    "types": ["node"], // This ensures TypeScript includes node types globally
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts"
  ]
}